{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es2015", "es2019.array"],
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
        "@application/*": ["./application/*"],
        "@domain/*": ["./domain/*"],
        "@services/*": ["./services/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
